@{
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro Cliente";
}

<div class="row">
    <div class="col" id="divFormularioCliente">
        <h2>Cadastre o Colaborador</h2>
        <form id="formCadastroCliente">
            <div class="form-group">
                <label for="txtNome">Nome: </label>
                <input type="text" id="txtNome" class="form-control"
                 placeholder="Nome Completo"/>
            </div>
            <div class="form-group">
                <label for="txtFone">Telefone: </label>
                <input type="tel" id="txtFone" class="form-control"
                    pattern="\([0-9]{2}\)[0-9]{4,6}-[0-9]{3,4}$"
                    value="(00)00000-0000"/>
            </div>
            <div class="form-group">
                <label for="txtEmail">Email:</label>
                <input type="email" id="txtEmail" class="form-control"/>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                     id="RadioP" value="P">
                    <label class="form-check-label" for="RadioP">P</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                     id="RadioM" value="M">
                    <label class="form-check-label" for="RadioM">M</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                     id="RadioG" value="G">
                    <label class="form-check-label" for="RadioG">G</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions"
                     id="RadioGG" value="GG">
                    <label class="form-check-label" for="RadioGG">GG</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Enviar</button>
        </form>
    </div>
    <div class="col-md-8" id="divCadastrado" style="display: none;">
        <h2>Cliente cadastrado com sucesso !</h2>
    </div>
</div>
<div class="modal" id="modalLoading">
    <div class="d-flex justify-content-center h-100">
        <div class="spinner-border m-auto" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</div>