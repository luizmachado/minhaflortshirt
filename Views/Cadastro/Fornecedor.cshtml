@{
    Layout = "_LayoutSite";
    ViewData["Title"] = "Cadastro Fornecedor";
}

<div class="row">
    <div class="col" id="divFormularioFornecedor">
        <h2>Cadastre o Fornecedor</h2>
        <form id="formCadastro">
            <div class="form-group">
                <label for="txtNome">Nome: </label>
                <input type="text" id="txtNome" class="form-control"
                 placeholder="Nome Completo"/>
            </div>
            <div class="form-group">
                <label for="txtFone">Telefone: </label>
                <input type="tel" id="txtFone" class="form-control"
                    pattern="\([0-9]{2}\)[0-9]{4,6}-[0-9]{3,4}$"
                    value="(00)00000-0000"/>
            </div>
            <div class="form-group">
                <label for="txtEmail">Email:</label>
                <input type="email" id=txtEmail class="form-control"/>
            </div>
            <div class="form-group">
                <label for="txtSite">Site: </label>
                <input type="url" id="txtSite" class="form-control"
                 placeholder="https://www.example.com.br"/>
            </div>
            <button type="submit" class="btn btn-primary float-right">Enviar</button>
        </form>
    </div>
    <div class="col-md-8" id="divCadastrado" style="display: none;">
        <h2>Obrigado pelo seu registro. Em breve contactaremos de volta !</h2>
    </div>
</div>
<div class="modal" id="modalLoading">
    <div class="d-flex justify-content-center h-100">
        <div class="spinner-border m-auto" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</div>